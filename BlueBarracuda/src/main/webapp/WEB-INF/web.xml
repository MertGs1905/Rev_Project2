<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>BlueBarracuda</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  
  
  <!-- The context load listener will tie the lifecycle of spring to the lifecyle of
  	tomcat itself. In short, it's an event listener -->
  <listener>
  	<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  
  	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>\WEB-INF\dispatcher-servlet.xml</param-value>
	</context-param>
  
  
  
  <servlet>
  	<!-- Whatever you put in the "servlet-name" tag, you'll need a file called
  	chosenname-servlet.xml to match -->
  	<servlet-name>dispatcher</servlet-name>
  	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>dispatcher</servlet-name>
  	<url-pattern>*.app</url-pattern>  	
  </servlet-mapping>
</web-app>
